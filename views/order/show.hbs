<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    {{> navbar}}

    <div class="container mt-3">
        {{> message}}
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Order info</h3>
                    </div>
                    <form action="/admin/order/update" method="POST">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" name="id" value="{{ order._id }}">
                                    <div class="form-group">
                                        <label for="fullname">Fullname <span class="text-danger">(*)</span></label>
                                        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter Fullname" value="{{ order.fullname }}" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address <span class="text-danger">(*)</span></label>
                                        <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" value="{{ order.address }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="phone">Phone <span class="text-danger">(*)</span></label>
                                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter Phone" value="{{ order.phone }}" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email <span class="text-danger">(*)</span></label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" value="{{ order.email }}" readonly>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="status">Status</label>
                                        <select class="form-control" id="status" name="status">
                                            <option value="0" {{ setSelectedItem order.status (getStatus 0) }}>Received</option>
                                            <option value="1" {{ setSelectedItem order.status (getStatus 1) }}>In progress</option>
                                            <option value="2" {{ setSelectedItem order.status (getStatus 2) }}>Completed</option>
                                            <option value="3" {{ setSelectedItem order.status (getStatus 3) }}>Cancelled</option>
                                            <option value="4" {{ setSelectedItem order.status (getStatus 4) }}>Waiting to cancel order</option>
                                        </select>
                                    </div>
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Order</h3>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each order.items}}
                                                        <tr>
                                                            <td>{{ product.name }}</td>
                                                            <td>{{ quantity }}</td>
                                                            <th>{{ multiplication quantity price }} VND</th>
                                                        </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="card-footer clearfix">
                                            <h5 class="text-danger font-weight-bold">Total price: {{ order.totalPrice }} VND</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>  
    </div>
</body>

</html>